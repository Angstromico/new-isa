---
import { ViewTransitions } from 'astro:transitions'
import { Header, Footer } from 'c/index'
import mainImg from 'imgs/mainImg.png'
import { SEOMetadata } from 'astro-seo-metadata'
import '../styles/global.css'

interface Props {
	title?: string;
	description?: string
	image?: string 
}

const { title, description, image } = Astro.props
const url = Astro.url.href
---

<!doctype html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- Preload fonts -->
		<meta name="generator" content={Astro.generator} />
		<SEOMetadata
			siteName={title || 'Isa Web Page'}
			title={title || 'Isa Web Page'}
			description={description || 'Isa Web Page'}
			image={image || mainImg.src}
			favicon={'/favicon.svg'}
			copyright="ISC"
			canonicalUrl={url}
			type={'website'}
			astroGenerator={true}
		/>
		<title>{'Isa Web Page'}</title>
		<ViewTransitions />
	</head>
	<body class="font-okta">
		<Header />
			<slot />
		<Footer />
	</body>
</html>

<style is:global>
	body {
		background-color: black;
		color: white;
		overflow-x: hidden;
	}
</style>
