---

import image1 from 'imgs/Rectangle.png';

---

<section class=" mt-[150px] mx-[16px] md:mt-[200px] md:mx-[160px]">
    <div class="flex h-auto gap-[24px]">
        <div class="bg-gradient-to-t from-azulGradiente from-0% to-verdeGradiente to-100% h-auto w-[10px]  " />
        <h2 class="text-[30px] font-bold font-400 uppercase md:text-[50px]"> Contactanos </h2>
    </div>

    <div class="flex content-between flex-col-reverse gap-y-[48px] md:my-8 md:flex-row">
        <div class=" md:w-1/3">
          <form class="space-y-10">
            <div>
              <label class="block uppercase text-white text-[24px] md:text-[28px]">Nombre</label>
              <input type="text" placeholder="Primer y segundo nombre" class=" lock w-full p-4 my-[24px] rounded-md shadow-sm bg-grisOscuro placeholder:white placeholder:text-[24px]" />
            </div>
            <div>
              <label class="block uppercase text-white text-[24px] md:text-[28px]">Correo </label>
              <input type="email" placeholder="correo@example.com" class=" block w-full p-4 my-[24px] rounded-md shadow-sm bg-grisOscuro placeholder:white placeholder:text-[24px]" />
            </div>
            <div>
              <label class="block font-400 uppercase text-white text-[24px] md:text-[28px]">Mensaje</label>
              <textarea placeholder="Inserte mensaje" class="block w-full p-2 rounded-md  my-[24px] shadow-sm bg-grisOscuro placeholder:white placeholder:text-[24px]" rows="8"></textarea>
            </div>
            <div class="flex md:justify-end">
              <button type="submit" class="w-full md:w-auto px-[24px] py-[10px] bg-white text-[#0F7D87] rounded-full shadow-sm">Enviar</button>
            </div>
          </form>
        </div>
        <div class="flex justify-center items-start w-full mt-[48px] md:mt-0 lg:mt-0 md:ml-8 md:w-2/3">
          <img src={image1.src} alt="Imagen de contacto" class="md:w-full lg:h-full object-cover shadow-md rounded-tr-lg" />
        </div>
      </div>
</section>